{
	"manifest_version": 3,
	"name": "Open Source Pal",
	"description": "Your open source assistant",
	"version": "1.0.0",
	"icons": {
		"16": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	},
	"action": {
		"default_title": "Click Me",
		"default_popup": "popup.html"
	},
	"permissions": [
		"storage",
		"activeTab",
		"webNavigation",
		"webRequest",
		"bookmarks",
		"identity"
	],
	"web_accessible_resources": [
		{
			"resources": ["redirect.html", "./content_main.js"],
			"matches": ["<all_urls>"]
		}
	],
	"options_page": "options.html",
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": ["https://github.com/*"],
			"js": ["./contentScript.js"]
		}
	]
}
